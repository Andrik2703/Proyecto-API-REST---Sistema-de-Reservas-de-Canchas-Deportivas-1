erDiagram
    User ||--o{ Reservation : makes
    User ||--o{ Payment : processes
    Field ||--o{ Reservation : has
    Reservation ||--|{ ReservationItem : contains
    Field ||--o{ Schedule : defines
    
    User {
        int id PK
        string name
        string email UK
        string password
        string role
        string phone
        datetime created_at
        datetime updated_at
    }
    
    Field {
        int id PK
        string name
        string sport_type
        string location
        decimal price_per_hour
        int capacity
        boolean is_active
        datetime created_at
        datetime updated_at
    }
    
    Reservation {
        int id PK
        int user_id FK
        int field_id FK
        datetime start_time
        datetime end_time
        decimal total_price
        string status
        datetime created_at
        datetime updated_at
    }
    
    ReservationItem {
        int id PK
        int reservation_id FK
        string item_type
        string description
        decimal price
        int quantity
        datetime created_at
        datetime updated_at
    }
    
    Payment {
        int id PK
        int user_id FK
        int reservation_id FK
        decimal amount
        string payment_method
        string status
        string transaction_id UK
        datetime payment_date
        datetime created_at
        datetime updated_at
    }
    
    Schedule {
        int id PK
        int field_id FK
        string day_of_week
        time opening_time
        time closing_time
        boolean is_available
        datetime created_at
        datetime updated_at
    }