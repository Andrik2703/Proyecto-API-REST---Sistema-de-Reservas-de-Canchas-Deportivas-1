classDiagram
    class User {
        +int id
        +string name
        +string email
        +string password
        +string role
        +string phone
        +datetime created_at
        +datetime updated_at
        +List~Reservation~ reservations
        +List~Payment~ payments
        +validateEmail() bool
    }
    
    class Field {
        +int id
        +string name
        +string sport_type
        +string location
        +decimal price_per_hour
        +int capacity
        +bool is_active
        +datetime created_at
        +datetime updated_at
        +List~Reservation~ reservations
        +List~Schedule~ schedules
        +calculateAvailability() bool
    }
    
    class Reservation {
        +int id
        +int user_id
        +int field_id
        +datetime start_time
        +datetime end_time
        +decimal total_price
        +ReservationStatus status
        +datetime created_at
        +datetime updated_at
        +User user
        +Field field
        +List~ReservationItem~ items
        +Payment payment
        +calculateTotalPrice() decimal
        +validateTimeSlot() bool
    }
    
    class ReservationItem {
        +int id
        +int reservation_id
        +string item_type
        +string description
        +decimal price
        +int quantity
        +datetime created_at
        +datetime updated_at
        +Reservation reservation
        +calculateSubtotal() decimal
    }
    
    class Payment {
        +int id
        +int user_id
        +int reservation_id
        +decimal amount
        +string payment_method
        +PaymentStatus status
        +string transaction_id
        +datetime payment_date
        +datetime created_at
        +datetime updated_at
        +User user
        +Reservation reservation
        +processPayment() bool
    }
    
    class Schedule {
        +int id
        +int field_id
        +DayOfWeek day_of_week
        +time opening_time
        +time closing_time
        +bool is_available
        +datetime created_at
        +datetime updated_at
        +Field field
        +checkAvailability() bool
    }
    
    class ReservationStatus {
        <<enumeration>>
        PENDING
        CONFIRMED
        CANCELLED
        COMPLETED
    }
    
    class PaymentStatus {
        <<enumeration>>
        PENDING
        COMPLETED
        FAILED
        REFUNDED
    }
    
    class DayOfWeek {
        <<enumeration>>
        MONDAY
        TUESDAY
        WEDNESDAY
        THURSDAY
        FRIDAY
        SATURDAY
        SUNDAY
    }
    
    User "1" -- "*" Reservation : makes
    Field "1" -- "*" Reservation : hosts
    Reservation "1" -- "*" ReservationItem : contains
    User "1" -- "*" Payment : processes
    Reservation "1" -- "0..1" Payment : has
    Field "1" -- "*" Schedule : defines